<% if @solo.errors.any? %>
<section id="errors">
  <header>
    <h2>
      Oops! The <%= @solo.class.name.titleize.downcase %> could not be saved.
    </h2>
    <h3>
      Please correct the folowing <%= pluralize(@solo.errors.count, "error") %>:
    </h3>
  </header>
  <ul>
    <% @solo.errors.full_messages.each do |message| %>
    <li> <%= message %></li>
    <% end %>
  </ul>
</section>
<% end %>
